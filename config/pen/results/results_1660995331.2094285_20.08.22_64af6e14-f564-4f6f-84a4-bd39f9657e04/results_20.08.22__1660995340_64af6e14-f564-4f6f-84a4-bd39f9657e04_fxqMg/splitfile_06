
  (let ((base 26))
    (mod char base)))

(defun pen-modeline-name-ascii ()
  (let ((dn (pen-daemon-name)))
    (cond ((string-equal "DEFAULT" dn)
           "ðŸ–Š")
          ((s-matches? "pen-" dn)
           (let* ((num (string-to-number dn))
                  (num-ascii (ascii-letter-from-int num)))
             num-ascii))
          (t
           "emacs"))))


