
  (let ((n (- char ?a)))
    (if (< n 0)
        (error "invalid char: %s" char)
      (char-to-string (+ ?a n)))))

(defun pen-modeline-name-ascii ()
  (let ((dn (pen-daemon-name)))
    (cond ((string-equal "DEFAULT" dn)
           "ðŸ–Š")
          ((s-matches? "pen-" dn)
           (let* ((n (string-to-number dn))
                  (l (- n 1)))
             (if (< l 0)
                 "emacs"
               (ascii-letter-from-int l)))))))


