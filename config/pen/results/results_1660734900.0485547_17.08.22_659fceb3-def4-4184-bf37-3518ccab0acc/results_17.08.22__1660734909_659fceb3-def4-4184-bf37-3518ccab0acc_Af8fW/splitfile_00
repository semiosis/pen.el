
  -- The sentence should use the word "years" instead of "age"
  -- The sentence should use the correct pluralization of "years"
  -- The sentence should use the correct pluralization of "months"
  -- The sentence should use the correct pluralization of "days"
  -- The sentence should use the correct pluralization of "hours"
  -- The sentence should use the correct pluralization of "minutes"
  -- The sentence should use the correct pluralization of "seconds"
  putStrLn "Enter your age in years: "
  read age

  let years = age * 365 * 24 * 60 * 60
  let months = age * 12 * 30 * 24 * 60 * 60
  let days = age * 30 * 24 * 60 * 60
  let hours = age * 24 * 60 * 60
  let minutes = age * 60
  let seconds = age

  put
