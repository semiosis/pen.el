#!/bin/bash
export TTY

( hs "$(basename "$0")" "$@" "#" "<==" "$(ps -o comm= $PPID)" 0</dev/null ) &>/dev/null

script_fp="$1"
shift

ns="$(cat "$script_fp" | scrape "^\\(ns [a-z._-]+\\b" | cut -d ' ' -f 2)"
has_main="$(cat "$script_fp" | scrape "^\\(defn main\\b" | cut -d ' ' -f 2)"

if test -n "$has_main"; then
    bb -cp "/root/.emacs.d/host/pen.el/scripts/babashka" -m "$ns/main" "$@"
else
    bb -cp "/root/.emacs.d/host/pen.el/scripts/babashka" "$@"
fi

exit "$?"
