#!/bin/bash
export TTY

# go language server

( hs "$(basename "$0")" "$@" "#" "<==" "$(ps -o comm= $PPID)" 0</dev/null ) &>/dev/null

# github author/repo may need adjustment
test -f "${GOPATH%%:*}/bin/up" || go install golang.org/x/tools/gopls@latest &>/dev/null
 
# arbitrate ${GOPATH%%:*}/bin/gopls "$@"
${GOPATH%%:*}/bin/gopls "$@"
