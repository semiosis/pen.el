#!/bin/bash
export TTY

. $SCRIPTS/lib/hs

sn="$(basename "$0")"

while [ $# -gt 0 ]; do opt="$1"; case "$opt" in
    "") { shift; }; ;;
    -sn) {
        sn="$2"
        shift
        shift
    }
    ;;

    *) break;
esac; done

while [ $# -gt 0 ]; do opt="$1"; case "$opt" in
    "") { shift; }; ;;
    -o|-only) { # Make the window that appears the only window
        export ONLY_WINDOW=y
        shift
    }
    ;;

    -df) {
        delete_frame=y
        shift
    }
    ;;

    -sn) {
        sn="$2"
        shift
        shift
    }
    ;;

    -1|-rest|-Eargs) {
        eargs=y
        shift
    }
    ;;

    *) break;
esac; done

case "$sn" in
    cpp-playground) {
        ic=cc-playground
    }
    ;;

    ew3m) {
        ic=w3m
        export ONLY_WINDOW=y
    }
    ;;

    emount) {
        ic=list-fs
        export ONLY_WINDOW=y
    }
    ;;

    eftp) {
        ic=ftp
    }
    ;;

    einfo) {
        ic=info
    }
    ;;

    ebdb) {
        ic=ebdb-display-all-records
        # ic=ebdb-display-all-records-full
    }
    ;;

    enm|enotmuch) {
        ic=notmuch
    }
    ;;

    cfw-agenda) {
        ic=cfw:open-org-calendar
    }
    ;;

    notmuch-compose) {
        ic=notmuch-mua-mail
    }
    ;;

    ehtop) {
        ic=htop
    }
    ;;

    ecal|ecalendar) {
        ic=calendar
    }
    ;;

    cfw|ecfw) {
        ic=cfw:open-calendar-buffer
    }
    ;;

    calr|ecalr) {
        ic=cfw:open-org-calendar
    }
    ;;

    pen-om|eopen-main) {
        ic=open-main
    }
    ;;

    ecreate-tablist) {
        ic=create-tablist
    }
    ;;

    ra|lra) {
        ic=pen-goto-package
    }
    ;;

    edocker) {
        ic=docker

        disable-docker-wrapper
    }
    ;;

    vuiet-play-song) {
        ic=vuiet-play-track
        vuiet-stop -df
    }
    ;;

    vuiet-play-artist) {
        ic=vuiet-play-artist
        vuiet-stop -df
    }
    ;;

    erat) {
        ic=erat

        enable-docker-wrapper
    }
    ;;

    emms) {
        ic=emms-browser
    }
    ;;

    epsysh) {
        ic=psysh
    }
    ;;

    *) {
        ic="$sn"
    }
    ;;
esac

ic="$(p "$ic" | sed "s/^e-//")"

if test "$#" -gt 0; then
    if test "$eargs" = "y"; then
        # cmd-nice sdlajf lkadsjf kldsajk "fld  dalks"
        # sdlajf lkadsjf kldsajk "fld  dalks"
        CMD="$(cmd-nice "$@")"
        set -- -cip "$ic" "$CMD"
    else
        set -- -cip "$ic" "$@"
    fi
else
    set -- -ic "$ic"
fi

if test "$3" = "=nil"; then
    pen-ns "grep-app doesn't work with a nil for contents"
fi

if test "$delete_frame" = "y"; then
    set -- -df "$@"
    in-pen unbuffer pen-e "$@" &>/dev/null
else
    in-pen pen-e "$@"
fi
