#!/bin/bash
export TTY

( hs "$(basename "$0")" "$@" "#" "<==" "$(ps -o comm= $PPID)" 0</dev/null ) &>/dev/null

sn="$(basename -- "$0")"

if ! inside-docker-p && docker-running-p; then
    is_tty() { [ -t 1 ] && ! test "$TERM" = "dumb"; }

    if is_tty; then
        in-pen in-tm "$sn" "$@"
    else
        in-pen "$sn" "$@"
    fi

    exit "$?"
fi

case "$sn" in
    bl|ebible) {
        # default
        module=NASB
    }
    ;;

    nasb) {
        module=NASB
    }
    ;;

    asv) {
        module=ASV
    }
    ;;

    maori) {
        module=Maori
    }
    ;;

    kjv) {
        module=KJV
    }
    ;;

    bsb) {
        module=engbsb2020eb
    }
    ;;

    *) {
        module="$sn"
    }
    ;;
esac

: "${module:="NASB"}"

while [ $# -gt 0 ]; do opt="$1"; case "$opt" in
    "") { shift; }; ;;
    -ttp) {
        USE_TTP=y
        shift
    }
    ;;

    -s) {
        SEARCH=y
        shift
    }
    ;;

    -nem) {
        NOEMACS=y
        shift
    }
    ;;

    -m) {
        module="$2"
        shift
        shift
    }
    ;;

    -nottp) {
        USE_TTP=n
        shift
    }
    ;;

    *) break;
esac; done

: "${USE_TTP:="y"}"

is_tty() { [ -t 1 ] && ! test "$TERM" = "dumb"; }

doublespacemax () {
    sed 's/\s\+$//' | sed ':a;N;$!ba;s/\n\n\+/\n\n/g'
}

if test "$SEARCH" = "y"; then
    bible-search -m "$module" -g "$@"
    exit "$?"
fi

if is_tty && ! test "$NOEMACS" = y; then
    if test "$1"; then
        ref="$@"
        sp -cip bible-open =nil =nil "$module" "$ref"
    else
        sp -cip bible-open =nil =nil "$module"
    fi
else
    {
    echo "$@" | udl
    in-pen "diatheke" "-b" "$module" "-o" "w" "-f" "plain" "-k" "$@" | sed 's/^.* [0-9]\+:[0-9]\+: *//' | pen-s remove-trailing-whitespace | sed '/^$/d' | {
        if test "$USE_TTP" = "y"; then
            ttp
        else
            cat
        fi
    }
    } | sed '$s/\( *\)\(([^)]\+)\)$/\n\n\n\2/' | doublespacemax | pa -E colvs
    # | pen-s remove-trailing-whitespace | pen-s join ' ' | sed 's/[0-9]: /&\n/g' | sed '/^$/d' | awk 'NR%2==0' | pavs
fi
