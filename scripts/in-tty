#!/bin/bash
export TTY

# export PS4='+	"$(basename $0)"	${LINENO}	 '
# set -xv

is_stdout_pipe() {
    # If stout is a pipe
    [[ -p /dev/stdout ]]
}

is_stdout_pipe
ispipe="$?"

# test
# tmux run -b "echo hi | in-tty pa -tf"

. $SCRIPTS/lib/hs

# . $PENEL_DIR/scripts/utils.sh
. $PENELD/scripts/utils.sh

while [ $# -gt 0 ]; do opt="$1"; case "$opt" in
    "") { shift; }; ;;
    -E) {
        CMD="$2"
        shift
        shift
    }
    ;;

    -ifnopipe|-upo) {
        unless_pipe_out=y
        shift
    }
    ;;

    -xt) {
        use_xt=y
        shift
    }
    ;;

    *) break;
esac; done

CMD="$(cmd "$@")"

# test:
# nem bible-search disciple | v

if test "$unless_pipe_out" = y && test "$ispipe" = 0; then
    # echo pipingout | hls red 1>&2
    eval "$CMD"
elif test "$istty" = 0; then
    # echo is tty | hls red 1>&2
    eval "$CMD"
elif test "$istty_stderr" = 0; then
    # echo is tty stderr | hls red 1>&2
    if test "$hasstdin" = 0; then
        (
        if ! test "$ispipe" = 0; then
            exec 1>&2
        fi
        eval "$CMD"
        )
    else
        (
        exec <&2
        if ! test "$ispipe" = 0; then
            exec 1>&2
        fi
        eval "$CMD"
        )
    fi
else
    if test "$use_xt" = "y"; then
        xt -E "$CMD"
    else
        # echo tpop 1>&2
        tpop -E "$CMD"
    fi
fi
