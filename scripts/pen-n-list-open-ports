#!/bin/bash
export TTY

while [ $# -gt 0 ]; do opt="$1"; case "$opt" in
    "") { shift; }; ;;
    -F) {
        # Doesn't make it much faster for localhost anyway
        fast=y
        : "${scanargs:="-F"}"
        shift
    }
    ;;

    # extra ports
    -p) {
        extra_ports="$2"
        shift
        shift
    }
    ;;

    *) break;
esac; done
# allports
: "${scanargs:="-p-"}"

hn="$1"
: "${hn:="localhost"}"

{
echo "Host Port Protocol State Service"
if test -n "$extra_ports"; then
    spin nmap -sT -p "$extra_ports" -O "$hn" | sed "0,/^PORT /{d}" | sed "/^[^0-9]\\+/,\$d" | sed "s/^/$hn,/" | grep -v closed
fi
spin nmap -sT "$scanargs" -O "$hn" | sed "0,/^PORT /{d}" | sed "/^[^0-9]\\+/,\$d" | sed "s/^/$hn,/"
} | sed "s/ \\+/,/g" | tr '/' , # | pen-pavs