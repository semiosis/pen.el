#!/bin/bash
export TTY

( hs "$(basename "$0")" "$@" "#" "<==" "$(ps -o comm= $PPID)" 0</dev/null ) &>/dev/null

# Start a process inside emacs

while [ $# -gt 0 ]; do opt="$1"; case "$opt" in
    -E) {
        DO_EXEC=y
        shift
    }
    ;;

    *) break;
esac; done

if test "$DO_EXEC" = "y"; then
    CMD="$1"
else
    CMD="$(cmd-nice-posix "$@")"
fi

is_tty() {
    # If stout is a tty
    [[ -t 1 ]]
}

if is_tty; then
    x -sh "$(cmd sp -e "(pen-start-process $(cmd-nice-posix "$CMD"))")" -e "When done with this frame" -sl 0.5 -m '<' -sl 0.5 -m '>' -i
else
    sp -e "(pen-start-process $(cmd-nice-posix "$CMD"))" +ofq "(current-buffer-name)" | cat
fi
