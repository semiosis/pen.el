#!/bin/bash
export TTY

while [ $# -gt 0 ]; do opt="$1"; case "$opt" in
    "") { shift; }; ;;
    -8|-utf) {
        unicode=y
        shift
    }
    ;;

    -tor) {
        export USETOR=y
        shift
    }
    ;;

    -u) {
        UPDATE=y
        shift
    }
    ;;

    -vs) {
        pager=pen-vs
        shift
    }
    ;;

    -refs) {
        KEEP_REFS=y
        shift
    }
    ;;

    -orefs) {
        ONLY_REFS=y
        shift
    }
    ;;

    *) break;
esac; done

if test "$ONLY_REFS" = "y"; then
    export KEEP_REFS=y
fi

: "${pager:="v"}"

export UPDATE

exec 3>&2

is_tty() { [ -t 1 ] && ! test "$TERM" = "dumb"; }

fpage() {
    if is_tty; then
        $pager
    else
        cat
    fi
}

filter() {
    if test "$ONLY_REFS" = "y"; then
        sed '0,/^References/d' | sed -n "/^   \\./s/^   \\. //p"
    else
        {
            if ! test "$KEEP_REFS" = "y"; then
                sed '/^References/,$d'
            else
                cat
            fi
        } | sed 's/^ \+//' | \
        {
            if test "$unicode" = "y"; then
                cat
            else
                # pen-c ascify
                # clean-term-capture
                pen-c ascify
                # cat
            fi
        }
    fi
}

if [ -z "$COLUMNS" ] && is_tty; then
    eval `resize`
fi

if [ -n "$COLUMNS" ] && [ "$COLUMNS" -gt 120 ]; then
    COLUMNS=120
fi

if [ -z "$COLUMNS" ]; then
    eval `tm-resize`
fi

# : "${COLUMNS:="120"}"

export COLUMNS

outtf="$(pen-ci -f -m "$USETOR" elinks -dump-width "$COLUMNS" --no-numbering --dump "$@" | filter | pen-tf txt)" 

if ! test -s "$outtf"; then
    pen-ci -m "$USETOR" w3m -dump "$@" | filter > "$outtf"
fi

exec 2>&3
cat "$outtf" | fpage

exit 0
