#!/bin/bash
export TTY

# A sorting library for Pen.el

sn="$(basename "$0")"

sn="$(p "$sn" | sed 's/^pen-//')"

case "$sn" in
    *) {
        f="$1"
        shift
    }
esac

case "$f" in
    line-length) {
        # perl sort with custom comparator
        perl -e 'print sort { length($a) <=> length($b) } <>'
    }
    ;;
    
    line-length-desc) {
        # perl sort with custom comparator
        perl -e 'print sort { length($b) <=> length($a) } <>'
    }
    ;;
    
    path-depth) {
        # perl sort with custom comparator
        perl -e 'print sort { ($a =~ tr!/!!) <=> ($b =~ tr!/!!) } <>'
    }
    ;;

    *)
esac