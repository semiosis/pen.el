#!/bin/bash
export TTY

set -x

SOCKET="$1"
test -n "$SOCKET" || exit 1

if printf -- "%s\n" "$SOCKET" | grep -q -P '^[0-9]+$'; then
    SOCKET="pen-emacsd-$SOCKET"
fi

# This refreshes it after prompting
# What a dirty hack.
# tmux neww -d pen-x -sh "pen-emacsclient -t -a '' -s $HOME/.emacs.d/server/$SOCKET" -e UUU -c g -sl 0.2 -m : -s "(delete-frame)" -c m -i

ID_FORMAT="#{session_id}:#{window_id}.#{pane_id}"

winname="prompt-$SOCKET-$(date +%s)"
# ; tmux kill-window -t '$ID_FORMAT'
# Adding -F seems to make the nw disconnect
# -F "$ID_FORMAT" -P
# id="$()"

# SOCKET=pen-emacsd-5
# sentinal_string="tm_sentinal_${RANDOM}_$$"
# -x "tmux wait-for -S '$sentinal_string'"
# pen-tm -te -S nw -d -n "prompt-$SOCKET" -fa pen-x -sh "set -xv; pen-emacsclient -t -a '' -s $HOME/.emacs.d/server/$SOCKET" -sl 1 -c g -sl 0.5 -m : -sl 0.5 -s "(pen-kill-other-clients t)" -c m -x "tmux wait-for -S '$sentinal_string'" -i
pen-tm -te -S nw -d -n "prompt-$SOCKET" -fa pen-timeout 2 pen-x -sh "set -xv; pen-emacsclient -t -a '' -s $HOME/.emacs.d/server/$SOCKET" -sl 1 -c g -sl 0.5 -m : -sl 0.5 -s "(pen-kill-other-clients t)" -c m -i
sleep 1
# tmux wait-for "$sentinal_string"

# pen-tm -te nw -d -n "prompt-$SOCKET" -fa pen-x -sh "set -xv; pen-emacsclient -t -a '' -s $HOME/.emacs.d/server/$SOCKET" -sl 0.5 -c g -sl 0.5 -m : -sl 0.5 -s "(pen-kill-other-clients t)" -c m -i

# pen-emacsclient -a '' -s $HOME/.emacs.d/server/$SOCKET -e "(pen-kill-other-clients t)"
# sleep 0.5
# pen-tm nw -n "prompt-$SOCKET" -fa pen-x -sh "pen-emacsclient -t -a '' -s $HOME/.emacs.d/server/$SOCKET" -sl 0.1 -c g -sl 1 -m : -s "(pen-kill-other-clients t)" -c m -i

if ! unbuffer pen-e -D $SOCKET running; then
    cmd1 pen-x -sh "set -xv; pend $SOCKET" -sl 1 -c x -c c -i
    pen-tm -te -S nw -d -n "prompt-$SOCKET-pend" -fa pen-timeout 2 pen-x -sh "set -xv; pend $SOCKET" -sl 1 -c x -c c -i
    sleep 1
fi

if ! unbuffer pen-e -D $SOCKET running; then
    cmd1 pen-x -sh "set -xv; pend $SOCKET" -sl 1 -c x -c c -i
    pen-tm -te -S nw -d -n "prompt-$SOCKET-pend" -fa pen-timeout 2 pen-x -sh "set -xv; pend $SOCKET" -sl 1 -c x -c c -i
    sleep 1
fi

if unbuffer pen-e -D $SOCKET running; then
    if printf -- "%s\n" "$SOCKET" | grep -q -P '^pen-emacsd-'; then
    # if test "$USE_POOL" = "y"; then
        touch ~/.pen/pool/available/$SOCKET
    fi
else
   echo "$SOCKET not running" 1>&2
fi
