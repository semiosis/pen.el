#!/bin/bash
export TTY

# A more basic version of 'his'

colour_fg="$1"
test -n "$1" && shift

colour_bg="$1"
test -n "$1" && shift

: "${colour_fg:="reverse"}"

case "$colour_fg" in
    reverse|inverted) {
        his -i ".*"
    }
    ;;

    *)
        if test -n "$colour_bg"; then
            his -f "$colour_fg" -b "$colour_bg" ".*"
        else
            his -f "$colour_fg" ".*"
        fi
esac
